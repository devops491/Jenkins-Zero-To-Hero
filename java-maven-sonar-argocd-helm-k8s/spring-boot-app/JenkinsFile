pipeline {
    agent any

    environment {
        SONARQUBE = 'SonarQubeServer'         // Jenkins SonarQube installation name
        MAVEN_HOME = tool 'Maven'       // Maven installation in Jenkins
        DOCKER_IMAGE = 'durgesh296/spring-boot-app' // Standardized DockerHub repo
    }

    stages {

        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM',
                    branches: [[name: 'main']],
                    userRemoteConfigs: [[url: 'https://github.com/devops491/Jenkins-Zero-To-Hero.git']]
                ])
            }
        }

        stage('Build Maven Project') {
            steps {
                dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                    sh "${MAVEN_HOME}/bin/mvn clean package -DskipTests"
                }
            }
        }

        stage('Unit Tests') {
            steps {
                dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                    sh "${MAVEN_HOME}/bin/mvn test"
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                    withSonarQubeEnv('SonarQube') {
                        sh "${MAVEN_HOME}/bin/mvn sonar:sonar"
                    }
                }
            }
        }

        stage('Quality Gate') {
            steps {
                waitForQualityGate abortPipeline: true
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                    script {
                        docker.build("${DOCKER_IMAGE}:${env.BUILD_NUMBER}")
                    }
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                    withDockerRegistry([credentialsId: 'dockerhub-creds', url: '']) {
                        sh "docker push ${DOCKER_IMAGE}:${env.BUILD_NUMBER}"
                    }
                }
            }
        }

        stage('Update Kubernetes Manifest') {
            steps {
                dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests') {
                    sh """
                    sed -i 's|${DOCKER_IMAGE}:.*|${DOCKER_IMAGE}:${env.BUILD_NUMBER}|' deployment.yml
                    """
                    sh "git add deployment.yml"
                    sh "git commit -m 'Update image tag to build ${env.BUILD_NUMBER}' || echo 'No changes to commit'"
                    sh "git push origin main || echo 'Push failed, skipping'"
                }
            }
        }

        stage('Deploy via ArgoCD') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'argocd-creds', usernameVariable: 'ARGO_USER', passwordVariable: 'ARGO_PASS')]) {
                    sh """
                    argocd login localhost:8082 --username $ARGO_USER --password $ARGO_PASS --insecure
                    argocd app sync spring-boot-app
                    """
                }
            }
        }

        stage('Verify Deployment') {
            steps {
                sh "kubectl rollout status deployment/spring-boot-app"
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed. Check logs for errors.'
        }
    }
}
